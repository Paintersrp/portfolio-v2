---
import '@fontsource-variable/rubik'
---

<style is:global>
  :root {
    --font-sans: 'Rubik Variable';
    --font-serif: var(--font-sans);
    --font-heading: var(--font-sans);

    --primary: rgb(98, 70, 234);
    --primary-hover: rgba(98, 70, 234, 0.9);

    --secondary: #fffffe;
    --contrast: #d1d1e9;
    --border: rgba(98, 70, 234, 0.2);

    --text-heading: #2b2c34;
    --text-default: #2b2c34;
    --text-muted: #2b2c34;
    --text-button: #fffffe;

    --bg-page: #fffffe;
    --bg-contrast: #d1d1e9;
  }

  .dark {
    --font-sans: 'Rubik Variable';
    --font-serif: var(--font-sans);
    --font-heading: var(--font-sans);

    --primary: rgba(127, 90, 240);
    --primary-hover: rgba(127, 90, 240, 0.7);

    --secondary: #242629;
    --contrast: #242629;
    --border: rgba(127, 90, 240, 0.2);

    --accent: rgba(127, 90, 240);
    --accent-hover: rgba(127, 90, 240, 0.75);

    --text-heading: #fffffe;
    --text-default: #fffffe;
    --text-muted: #94a1b2;

    --bg-page: #16161a;
  }
</style>
