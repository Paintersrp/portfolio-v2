---
type Props = {
  href: string
}

const { href } = Astro.props as Props
---

<a class="not-prose" href={href}>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="1em"
    height="1em"
    viewBox="0 0 24 24"
    class="size-6 md:size-5 text-muted hover:text-primary"
  >
    <g
      fill="none"
      stroke="currentColor"
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
    >
      <path d="m9 14l-4-4l4-4"></path>
      <path d="M5 10h11a4 4 0 1 1 0 8h-1"></path>
    </g>
  </svg>
</a>
