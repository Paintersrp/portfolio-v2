---
type Props = {
  href: string
}

const { href } = Astro.props as Props
---

<a download class="not-prose" href={href} rel="noopener noreferrer" data-resume-download>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="1em"
    height="1em"
    viewBox="0 0 24 24"
    class="size-6 md:size-5 text-muted hover:text-primary"
  >
    <path
      fill="none"
      stroke="currentColor"
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M4 17v2a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-2M7 11l5 5l5-5m-5-7v12"></path>
  </svg>
</a>
