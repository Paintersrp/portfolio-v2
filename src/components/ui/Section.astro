---
import { cn } from '@/utils/utils'

import type { SectionProps } from '@/types/site'

const { id, as = 'section', isDark = false, class: className } = Astro.props as SectionProps

const Tag = as
---

<Tag class="scroll-mt-[72px]" id={id ?? ''}>
  <div
    class={cn(
      'relative mx-auto max-w-7xl px-4 md:px-6 py-12 md:py-16 lg:py-20 text-default',
      isDark && 'dark',
      className
    )}
  >
    <slot />
  </div>
</Tag>
